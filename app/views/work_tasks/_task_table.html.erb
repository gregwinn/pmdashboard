<table class="table">
  <thead>
    <tr>
      <th>Task</th>
      <th>Status</th>
      <th>Due Date</th>
      <th>Assignment</th>
    </tr>
  </thead>
  <tbody>
    <% subtasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, project_work_task_path(task.project, task) %></td>
        <td><%= task.status.titleize %></td>
        <td><%= task.due_date.strftime("%m/%d/%Y") %></td>
        <td><%= task.user_assignment.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>