<% content_for :action_bar do %>
  <div class="row justify-content-end">
    <div class="col-2">
      <div class="btn-group float-end" role="group" aria-label="Basic example">
        <%= link_to project_path(@project), method: :delete, data: {confirm: "Are you sure?"}, class: "float-end btn btn-outline-danger" do %>Delete<% end %>
        <%= link_to edit_project_path(@project), class: "float-end btn btn-outline-secondary" do %>Edit<% end %>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-12">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">Project: <%=@project.title %></li>
      </ol>
    </nav>
  </div>

  <div class="col-12">
    <h2>Project: <%=@project.title %></h2>
    <p><em><%=@project.description %></em></p>
  </div>

  <div class="col-6">
    <h3>Tasks</h3>
  </div>
  <div class="col-6">
    <%= link_to new_project_work_task_path(@project), class: "float-end btn btn-outline-primary btn-sm" do %>New Task<% end %>
  </div>

  <div class="col-12">
      <table class="table">
        <tr>
          <th>Task</th>
          <th>Status</th>
          <th>Due Date</th>
          <th>Progress</th>
        </tr>
        <% @project.work_tasks.top_level.each do |task| %>
          <tr>
            <td><%= link_to task.title, project_work_task_path(@project, task) %></td>
            <td><%= task.status.titleize %></td>
            <td><%= task.due_date %></td>
            <td>
              <% if task.has_subtasks? %>
                <div class="progress mt-1" role="progressbar" aria-label="Basic example" aria-valuenow="<%=subtask_status_bar(task) %>" aria-valuemin="0" aria-valuemax="100">
                  <div class="progress-bar" style="width: <%=subtask_status_bar(task) %>%"></div>
                </div>
              <% else %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
  </div>

</div>