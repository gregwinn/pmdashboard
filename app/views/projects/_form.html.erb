<%=form_for @project do  |form|%>
  <% if @project.errors %>
    <ul>
      <% @project.errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="col-12">
    <%=form.label :title, class: "form-label"%>
    <%=form.text_field :title, class: "form-control"%>
  </div>
  <div class="col-12">
    <%=form.label :description, class: "form-label"%>
    <%=form.text_area :description, class: "form-control"%>
  </div>

  <div class="col-12">
    <%=form.label :due_date, class: "form-label"%>
    <%=form.text_field :due_date, value: @project.due_date ? @project.due_date.strftime("%Y-%m-%d") : Date.today.strftime("%Y-%m-%d"), class: "form-control"%>
  </div>

  <div class="col-12 mt-3">
    <%= link_to "Cancel", @project.id ? project_path(@project) : root_path, class: "btn btn-outline-secondary" %>
    <button class="btn btn-primary float-end" type="submit">Save</button>
  </div>
<% end %>